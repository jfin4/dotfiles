#!/bin/bash

print_header() {
    text="$1 "
    pad_length=$((78 - ${#text}))
    printf "\n%s " $text
    printf "%0.s-" $(seq 1 $pad_length)
    printf "\n"
}

print_header "dotfiles"
git --git-dir=$HOME/.dotfiles.git --work-tree=$HOME pull
print_header "data:resources"
rclone sync --update --progress data:resources ~/resources
print_header "docs:notes"
rclone sync --update --progress docs:notes ~/notes
print_header "docs:projects"
rclone sync --update --progress docs:projects ~/projects
print_header "docs:records"
rclone sync --update --progress docs:records ~/records
print_header "docs:relep"
rclone sync --update --progress docs:relep ~/relep --exclude="/ReLEP/**" --exclude="/Region **"



# vim: filetype=neomuttrc
# muttrc file for account john@johnfinman.com
set realname = "john"
set from = "john@johnfinman.com"
set sendmail = "msmtp -a john@johnfinman.com"
alias me john <john@johnfinman.com>
set folder = "/home/jfin/.local/share/mail/john@johnfinman.com"
set header_cache = /home/jfin/.cache/mutt-wizard/john@johnfinman.com/headers
set message_cachedir = /home/jfin/.cache/mutt-wizard/john@johnfinman.com/bodies
set mbox_type = Maildir
set hostname = "johnfinman.com"
# \. /usr/share/mutt-wizard/switch.muttrc
set spoolfile = +INBOX
set postponed = +Drafts
set trash = +Trash
set record = +Sent

macro index o "<shell-escape>mw -y john@johnfinman.com<enter>" "run mbsync to sync john@johnfinman.com"
macro index g "<enter-command>unset wait_key<enter><shell-escape>gpg --list-secret-keys; printf 'Enter email ID of user to publish: '; read eID; printf 'Enter fingerprint of GPG key to publish: '; read eFGPT; /usr/libexec/gpg-wks-client --create \$eFGPT \$eID | msmtp --read-envelope-from --read-recipients -a john@johnfinman.com<enter>"  "publish GPG key to WKS provider"
macro index h "<pipe-message>/usr/libexec/gpg-wks-client --receive | msmtp --read-envelope-from --read-recipients -a john@johnfinman.com<enter>" "confirm GPG publication"

mailboxes "=Trash" "=Spam" "=Sent" "=Drafts" "=INBOX"
